@model Movies.ViewModels.Login
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}


<title>Login</title>

<h2 style="color:red;">Login</h2>
<h5>Login to your account and Enjoy Watching.</h5>
<hr>
@using (Html.BeginForm())
{@Html.AntiForgeryToken()
<div class="form-horizontal" style="border-radius:30px;width:40%; background:#f4f6f9;margin-left:auto;margin-right:auto;">
    <div style="padding:20%;">
        <div class="form-group " style="color:black">


            @Html.LabelFor(model => model.Email)

            @Html.TextBoxFor(model => model.Email, "", new { @class = "form-control", maxlength = 70, type = "email", placeholder = "Enter Your Email..." })

            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>


        <div class="form-group" style="color:black">

            @Html.LabelFor(model => model.Password)

            @Html.TextBoxFor(model => model.Password, "", new { @class = "form-control ", type = "password", minlength = 8, placeholder = "Enter Your Password..." })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>


        <br>

        <div class="form-group">
            <div class="col-lg-offset-4">
                <input type="submit" value="Login" class="btn btn-warning" style="border-radius:5px;width:50%;height:12%;" />

            </div>
        </div>
        <br>
        <div class="form-group" style="display:inline-block;color:black;">
            Don't you have account ? then
            <div style="display:inline-block; color:black ">

                <strong> @Html.ActionLink("Register", "Register", "Home", "", new { })</strong>

            </div><br>   @Html.ActionLink("Forgot Your Password ?", "forgotpassword", "Home", "", new { })
        </div>
    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/custom-validator")
}
